<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppCatalogo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_800</item>
        <item name="colorPrimaryVariant">@color/teal_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogTheme" parent="Theme.AppCatalogo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogThemeSimple" parent="Theme.AppCatalogo">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="colorButtonNormal">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="theme">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.Button.Sair" parent="Widget.MaterialComponents.Button">
        <item name="android:text">@string/sair</item>
        <item name="theme">@style/AppTheme.Button</item>
        <item name="drawableEndCompat">@drawable/ic_baseline_close_24_white</item>
    </style>

    <style name="AppTheme.ImageButton.White" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCatalogo">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCatalogo.Fullscreen" parent="Theme.AppCatalogo">
        <item name="android:actionBarStyle">@style/Widget.Theme.AppCatalogo.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.AppCatalogo.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>