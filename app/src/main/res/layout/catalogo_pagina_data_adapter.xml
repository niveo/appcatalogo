<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    android:clickable="true"

    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cardviewcatalogopagina_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="top|end">

                <ImageButton
                    android:id="@+id/cardviewcatalogopagina_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:adjustViewBounds="true"
                    android:background="?android:selectableItemBackground"
                    app:srcCompat="@drawable/ic_baseline_more_vert_24" />

            </FrameLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cardviewcatalogopagina_alterado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="bottom|end"
                android:textColor="@color/amber_500"
                tools:text="25/06/2020 15:51:01" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cardviewcatalogopagina_mapeados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|end"
                android:textColor="@color/amber_500" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cardviewcatalogopagina_pagina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="bottom|end" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>